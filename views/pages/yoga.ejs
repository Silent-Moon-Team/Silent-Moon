<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yoga</title>
    <link rel="stylesheet" href="yoga.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <header class="yoga_header">
        <h1>SILENT MOON</h1>
        <h2>Find your Soul</h2>
    </header>
    <main>
        <section class="yoga_wrapper">
            <% result.forEach(element=> { %>
                <div>
                    <a href=<%=`/yoga_details/${element._id}`%>>
                        <img class="yoga_img" src=<%=element.img_url2 %> alt="coolesBild">
                    </a>
                    <h1>
                        <%= element.title %>
                    </h1>
                    <p>
                        <%= element.description %>
                    </p>
                </div>
                <% }) %>
        </section>
    </main>
    <!-- *********************** -->
    <!-- ******  NAVIGATION   ****** -->
    <!-- *********************** -->
    <div class="container nav-bar">
        <nav>


            <a href="/meditation">
                <div class="btn_wrapper">

                    <div class="nav_top">

                        <img src="/images/nav_meditation.svg" alt="">
                    </div>
                    <div class="nav_bottom">

                        <p>Meditation</p>
                    </div>

                </div>
            </a>

            <a href="/music">
                <div class="btn_wrapper">

                    <div class="nav_top">

                        <img src="/images/music.svg" alt="">
                    </div>

                    <div class="nav_bottom">

                        <p>Music</p>
                    </div>

                </div>
            </a>

            <a href="/home">
                <div class="btn_wrapper">

                    <div class="nav_top">

                        <img src="/images/home.svg" alt="">
                    </div>

                    <div class="nav_bottom">

                        <p>Home</p>
                    </div>

                </div>
            </a>

            <a href="/yoga">
                <div class="active btn_wrapper">

                    <div class="nav_top">

                        <img src="/images/yoga.svg" alt="">
                    </div>

                    <div class="nav_bottom">

                        <p>Yoga</p>
                    </div>

                </div>
            </a>

            <a href="/profile">
                <div class="btn_wrapper">

                    <div class="nav_top">

                        <img src="/images/profile.svg" alt="">
                    </div>

                    <div class="nav_bottom">

                        <p>Profile</p>
                    </div>

                </div>
            </a>

        </nav>
    </div>

</body>

</html>